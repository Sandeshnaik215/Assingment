<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
 xmlns:p="http://www.springframework.org/schema/p"
  xmlns:c="http://www.springframework.org/schema/c"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
<bean class="com.techno.SpringCore.beans.assignment2.Laptop" name="lap">
<constructor-arg name="RAM" ref="r"/>
<constructor-arg name="Processor" ref="ps"/>
<constructor-arg name="Screen" ref="scra"/>
<constructor-arg name="MotherBoard" ref="mdb"/>
</bean>
<bean class="com.techno.SpringCore.beans.assignment2.Screen" name="scra" c:size="1980x1200"></bean>
<bean class="com.techno.SpringCore.beans.assignment2.MotherBoard" name="mdb" c:SlNo="349858"></bean>
<bean class="com.techno.SpringCore.beans.assignment2.RAM" name="r" c:ram="16gb"></bean>
<bean class="com.techno.SpringCore.beans.assignment2.Processor" name="ps" c:Pname="core"></bean>




</beans>